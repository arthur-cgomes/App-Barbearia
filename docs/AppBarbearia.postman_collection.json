        {
          "name": "GET All Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/user?take=10&skip=0&sort=name&order=ASC",
              "host": ["{{baseUrl}}"],
              "path": ["user"],
              "query": [
                { "key": "take", "value": "10", "description": "Number of records to return" },
                { "key": "skip", "value": "0", "description": "Number of records to skip (offset)" },
                { "key": "sort", "value": "name", "description": "Field to sort by" },
                { "key": "order", "value": "ASC", "description": "Sort direction: ASC or DESC" },
                { "key": "search", "value": "", "description": "Search term to filter by name (ILIKE)", "disabled": true }
              ]
