    {
      "name": "Scheduling",
      "item": [
        {
          "name": "POST Create Scheduling",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"barberShopId\": \"{{barbershopId}}\",\n  \"barberId\": \"{{barberId}}\",\n  \"serviceId\": \"{{serviceId}}\",\n  \"date\": \"2026-03-01T10:00:00.000Z\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/scheduling",
              "host": ["{{baseUrl}}"],
              "path": ["scheduling"]
            },
            "description": "Creates a new appointment. Requires authentication.\n\nCreated with status `pending` by default.\n\nConflict detection: the API loads the selected service's `durationMinutes` (defaults to 60 if not set), calculates `endTime = date + durationMinutes`, and checks if the same barber already has an overlapping scheduling at that barbershop. Returns 409 Conflict if a time overlap is found."
          }
        },
        {
          "name": "PUT Update Scheduling",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2026-03-01T14:00:00.000Z\",\n  \"status\": \"confirmed\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/scheduling/{{schedulingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["scheduling", "{{schedulingId}}"]
            },
            "description": "Updates an existing scheduling. All fields are optional. Requires authentication.\n\n`status` values: `pending`, `confirmed`, `completed`, `cancelled`, `no_show`.\n\nStatus lifecycle: PENDING → CONFIRMED → COMPLETED / CANCELLED / NO_SHOW"
          }
        },
        {
          "name": "GET Scheduling by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/scheduling/{{schedulingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["scheduling", "{{schedulingId}}"]
            },
            "description": "Returns a scheduling by its UUID. Requires authentication."
          }
        },
        {
          "name": "GET All Schedulings",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/scheduling?take=10&skip=0&sort=date&order=ASC",
              "host": ["{{baseUrl}}"],
              "path": ["scheduling"],
              "query": [
                { "key": "take", "value": "10", "description": "Number of records to return" },
                { "key": "skip", "value": "0", "description": "Number of records to skip (offset)" },
                { "key": "sort", "value": "date", "description": "Field to sort by" },
                { "key": "order", "value": "ASC", "description": "Sort direction: ASC or DESC" },
                { "key": "userId", "value": "", "description": "Filter by user UUID (ADMIN only — USER role always sees only their own schedulings)", "disabled": true },
