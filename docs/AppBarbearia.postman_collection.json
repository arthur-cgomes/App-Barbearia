            },
            "url": {
              "raw": "{{baseUrl}}/user/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["user", "{{userId}}"]
            },
            "description": "Updates an existing user's data. All fields are optional. Requires authentication."
          }
        },
        {
          "name": "GET User by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
